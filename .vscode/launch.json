{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/cyright/packages/vscode-pyright/dist/extension.js",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "smartStep": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/cyright/packages/vscode-pyright/dist/**/*.js"
      ]
    },
    {
      "name": "Extension (Watch)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/cyright/packages/vscode-pyright/dist/extension.js",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "smartStep": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/cyright/packages/vscode-pyright/dist/**/*.js"
      ],
      "preLaunchTask": "Watch extension"
    },
    {
      "name": "Attach server",
      "type": "node",
      "request": "attach",
      "port": 9600,
      "smartStep": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/cyright/packages/vscode-pyright/dist/**/*.js"
      ],
      "pauseForSourceMap": true
    },
    {
      "name": "Run tests",
      "type": "node",
      "request": "launch",
      "args": [
        "--runInBand"
      ],
      "cwd": "${workspaceRoot}/cyright/packages/pyright-internal/src/tests-cython",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/cyright/packages/pyright-internal/node_modules/jest/bin/jest"
    },
    {
      "name": "Run selected test",
      "type": "node",
      "request": "launch",
      "args": [
        "--runInBand",
        "-t",
        "${selectedText}"
      ],
      "cwd": "${workspaceRoot}/cyright/packages/pyright-internal/src/tests-cython",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/cyright/packages/pyright-internal/node_modules/jest/bin/jest"
    }
  ],
  "compounds": [
    {
      "name": "Extension + Server",
      "configurations": [
        "Extension",
        "Attach server"
      ],
      "preLaunchTask": "npm: build:extension:dev",
      "stopAll": true
    }
  ]
}